<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
            addruleprefix="NXD\Component\Companypartners\Administrator\Rule"
            addfieldprefix="NXD\Component\Companypartners\Administrator\Field"
    >
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                class="readonly hidden"
                hidden="true"
                readonly="true"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
        >
            <option value="*">JALL</option>
        </field>
        <field
                name="title"
                type="text"
                validate=""
                class=""
                label="COM_COMPANYPARTNERS_FIELD_NAME_LABEL"
                size="40"
                required="true"
        />

        <field
                name="alias"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                size="45"
                hint="JFIELD_ALIAS_PLACEHOLDER"
        />
        <field
                name="published"
                type="list"
                label="JSTATUS"
                default="1"
                id="published"
                class="custom-select-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="publish_up"
                type="calendar"
                label="COM_COMPANYPARTNERS_FIELD_PUBLISH_UP_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
                name="publish_down"
                type="calendar"
                label="COM_COMPANYPARTNERS_FIELD_PUBLISH_DOWN_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />
        <field
            name="description"
            type="editor"
            label="COM_COMPANYPARTNERS_FIELD_DESCRIPTION_LABEL"
            buttons="true"
            filter="JComponentHelper::filterText"
            cols="100"
            rows="10"
            hide="readmore,pagebreak,image"
        />

        <field
                name="ordering"
                type="ordering"
                label="JFIELD_ORDERING_LABEL"
                content_type="com_companypartners.partner"
        />
        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                size="1"
        />
    </fieldset>
    <fields name="params" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
        <fieldset name="display" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
            <field
                    name="show_name"
                    type="list"
                    label="COM_COMPANYPARTNERS_FIELD_PARAMS_NAME_LABEL"
                    useglobal="true"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>
    </fields>
</form>
