<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="partner"
              label="COM_COMPANYPARTNERS_FIELD_CONFIG_INDIVIDUAL_PARTNER_DISPLAY"
              description="COM_COMPANYPARTNERS_FIELD_CONFIG_INDIVIDUAL_PARTNER_DESC"
    >
        <field name="custom_fields_enable"
               type="radio"
               label="JGLOBAL_CUSTOM_FIELDS_ENABLE_LABEL"
               layout="joomla.form.field.radio.switcher"
               default="1"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="load_uikit"
                type="radio"
                label="COM_COMPANYPARTNERS_FIELD_PARAMS_LOAD_UIKIT_LABEL"
                default="1"
                layout="joomla.form.field.radio.switcher"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="permissions"
              label="JCONFIG_PERMISSIONS_LABEL"
              description="JCONFIG_PERMISSIONS_DESC"
    >
        <field name="rules"
               type="rules"
               label="JCONFIG_PERMISSIONS_LABEL"
               validate="rules"
               filter="rules"
               component="com_companypartners"
               section="component"
        />
    </fieldset>
</config>
