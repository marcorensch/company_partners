<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
    <name>Company Partners</name>
    <creationDate>August 2022</creationDate>
    <author>nx-designs | Marco Rensch</author>
    <authorEmail>suport@nx-designs.ch</authorEmail>
    <authorUrl>https://www.nx-designs.ch</authorUrl>
    <copyright>Copyright Â©2022 by nx-designs</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <version>1.0.0</version>
    <description>COM_COMPANYPARTNERS_XML_DESCRIPTION</description>
    <namespace path="src">NXD\Component\Companypartners</namespace>
    <scriptfile>script.php</scriptfile>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <update>  <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>


    <!-- Frond-end files -->
    <files folder="components/com_companypartners">
        <folder>src</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
    </files>

    <media folder="media/com_companypartners" destination="com_companypartners">
        <folder>js</folder>
        <filename>joomla.asset.json</filename>
    </media>

    <!-- Back-end files -->
    <administration>
        <!-- Menu entries -->
        <menu img="class:comment">
            COM_COMPANYPARTNERS
            <params>
                <dashboard>companypartners</dashboard>
            </params>
        </menu>

        <submenu>
            <menu link="option=com_companypartners&amp;view=partners">
                COM_COMPANYPARTNERS_PARTNERS
                <params>
                    <menu-quicktask-title>COM_COMPANYPARTNERS_FORM_VIEW_DEFAULT_TITLE</menu-quicktask-title>
                    <menu-quicktask>index.php?option=com_companypartners&amp;view=partner&amp;layout=edit</menu-quicktask>
                </params>
            </menu>
            <menu link="option=com_companypartners&amp;view=groups">
                COM_COMPANYPARTNERS_GROUPS
                <params>
                    <menu-quicktask-title>COM_COMPANYPARTNERS_FORM_VIEW_DEFAULT_TITLE</menu-quicktask-title>
                    <menu-quicktask>index.php?option=com_companypartners&amp;view=group&amp;layout=edit</menu-quicktask>
                </params>
            </menu>
            <menu link="option=com_categories&amp;extension=com_companypartners">
                JCATEGORIES
                <params>
                    <menu-quicktask-title>JCATEGORY</menu-quicktask-title>
                    <menu-quicktask>index.php?option=com_categories&amp;view=category&amp;layout=edit&amp;extension=com_companypartners</menu-quicktask>
                </params>
            </menu>
            <menu link="option=com_fields&amp;context=com_companypartners.partner">JGLOBAL_FIELDS</menu>
            <menu link="option=com_fields&amp;view=groups&amp;context=com_companypartners.partner">JGLOBAL_FIELD_GROUPS</menu>
        </submenu>

        <!-- Core files -->
        <files folder="administrator/components/com_companypartners">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>forms</folder>
            <folder>presets</folder>
            <folder>language</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
    </administration>

    <changelogurl>https://updates.nx-designs.ch/com_companypartners/changelog.xml</changelogurl>
    <updateservers>
        <server type="extension" name="Company Partners Updates">https://updates.nx-designs.ch/com_companypartners/update.xml</server>
    </updateservers>
    <dlid prefix="dlid=" suffix="" />

</extension>