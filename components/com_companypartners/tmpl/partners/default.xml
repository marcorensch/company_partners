<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_COMPANYPARTNERS_PARTNERS_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_COMPANYPARTNERS_PARTNERS_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>
    <fields name="params">
        <fieldset name="options" label="COM_COMPANYPARTNERS_MENU_PARAMS_FIELDSET_LABEL">
            <field
                    name="load_uikit"
                    type="list"
                    label="COM_COMPANYPARTNERS_FIELD_PARAMS_LOAD_UIKIT_LABEL"
                    default=""
            >
                <option value="">COM_COMPANYPARTNERS_FIELD_PARAMS_USE_GLOBAL_LABEL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="theme"
                type="list"
                label="COM_COMPANYPARTNERS_FIELD_PARAMS_THEME_LABEL"
                default="light"
                filter="string"
                >
                <option value="light">COM_COMPANYPARTNERS_FIELD_PARAMS_THEME_LIGHT_LABEL</option>
                <option value="dark">COM_COMPANYPARTNERS_FIELD_PARAMS_THEME_DARK_LABEL</option>
            </field>
            <field name="category_filter"
                   type="category"
                   label="COM_COMPANYPARTNERS_FIELD_PARAMS_CATEGORY_FILTER_LABEL"
                   description="COM_COMPANYPARTNERS_FIELD_PARAMS_CATEGORY_FILTER_DESC"
                   multiple="true"
                   extension="com_companypartners"
                   layout="joomla.form.field.list-fancy-select"
            />
            <field
                name="show_all_button"
                type="radio"
                label="COM_COMPANYPARTNERS_FIELD_PARAMS_SHOW_ALL_BUTTON_LABEL"
                description="COM_COMPANYPARTNERS_FIELD_PARAMS_SHOW_ALL_BUTTON_DESC"
                default="1"
                filter="integer"
                layout="joomla.form.field.radio.switcher"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                    name="hide_empty_groups"
                    type="radio"
                    label="COM_COMPANYPARTNERS_FIELD_PARAMS_HIDE_EMPTY_GROUPS_LABEL"
                    description="COM_COMPANYPARTNERS_FIELD_PARAMS_HIDE_EMPTY_GROUPS_DESC"
                    default="0"
                    layout="joomla.form.field.radio.switcher"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="limit_contactoptions"
                type="usergrouplist"
                label="COM_COMPANYPARTNERS_FIELD_PARAMS_SHOW_CONTACTS_FOR_GROUPS_LABEL"
                description="COM_COMPANYPARTNERS_FIELD_PARAMS_SHOW_CONTACTS_FOR_GROUPS_DESC"
                multiple="true"
                layout="joomla.form.field.list-fancy-select"
                />

        </fieldset>
    </fields>
    <!-- Add fields to the requests variables for the layout -->
    <fields name="request">
        <fieldset name="request" addfieldprefix="NXD\Component\Companypartners\Administrator\Field">

        </fieldset>
    </fields>
</metadata>